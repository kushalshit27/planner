{
  "name": "planner",
  "version": "0.1.0",
  "description": "Planner is a lightweight task management web application (Preact + Vite + Tailwind + IndexedDB).",
  "type": "module",
  "scripts": {
    "dev": "bunx vite",
    "build": "bunx tsc -b && bunx vite build",
    "preview": "bunx vite preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "bunx biome format --write .",
    "format:check": "bunx biome format .",
    "type-check": "bunx tsc --noEmit",
    "prepare": "husky",
    "knip": "knip",
    "knip:fix": "knip --fix --format"
  },
  "keywords": [
    "preact",
    "vite",
    "tailwind",
    "indexeddb",
    "signals"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@preact/signals": "^2.5.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "lucide-react": "^0.562.0",
    "preact": "^10.28.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@preact/preset-vite": "^2.10.2",
    "@types/node": "^25.0.3",
    "autoprefixer": "^10.4.23",
    "husky": "^9.1.7",
    "knip": "^5.78.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
