{
  "name": "planner",
  "version": "0.1.0",
  "description": "Planner is a lightweight task management web application (Preact + Vite + Tailwind + IndexedDB).",
  "type": "module",
  "scripts": {
    "dev": "bunx vite",
    "build": "bunx tsc -b && bunx vite build",
    "preview": "bunx vite preview",
    "lint": "bunx biome check --write .",
    "lint:check": "bunx biome check .",
    "format": "bunx biome format --write .",
    "format:check": "bunx biome format .",
    "type-check": "bunx tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "preact",
    "vite",
    "tailwind",
    "indexeddb",
    "signals"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@preact/signals": "^1.2.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.11",
    "lucide-react": "^0.474.0",
    "tailwind-merge": "^2.5.2",
    "preact": "^10.19.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@preact/preset-vite": "^2.10.2",
    "@types/node": "^22.7.4",
    "autoprefixer": "^10.4.20",
    "husky": "^9.1.7",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  }
}
